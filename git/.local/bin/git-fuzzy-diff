#!/bin/bash
# If there are no parameters, give the user options, and then add -e the results.
# Otherwise, if there are parameters, pass them directly to add.
if (( $# == 0 )); then
	targets=$(git status --porcelain | sed -n -e 's,^ M,ï‘€,p' | fzf -m --preview='git do readlink -f $(echo {} | sed -e"s,^.* ,,") | xargs git diff' | sed -e's,^.* ,,')
	if [ -n "${targets}" ]; then
		git do git diff -- ${targets}
	fi
else
	git do git diff $@
fi
